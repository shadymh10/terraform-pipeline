pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key')   // ØªØ£ÙƒØ¯ Ù…Ù† Ø¹Ù…Ù„ Credentials ÙÙŠ Jenkins
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
    }

    parameters {
        booleanParam(name: 'DESTROY', defaultValue: false, description: 'Set true to destroy infrastructure')
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo "ğŸ”¹ Checking out repository..."
                git(
                    url: 'https://github.com/shadymh10/terraform-pipeline.git', 
                    branch: 'main',
                    credentialsId: 'github-token'   // Ø§Ø³ØªØ®Ø¯Ù… GitHub token Ù„Ùˆ Ø§Ù„Ø±ÙŠØ¨Ùˆ Private
                )
            }
        }

        stage('Terraform Init') {
            steps {
                echo "ğŸ”¹ Initializing Terraform..."
                sh 'terraform init -input=false -reconfigure'
            }
        }

        stage('Terraform Validate') {
            steps {
                echo "ğŸ” Validating Terraform configuration..."
                sh 'terraform validate'
            }
        }

        stage('Terraform Plan') {
            steps {
                echo "ğŸ“¦ Creating Terraform plan..."
                sh 'terraform plan -input=false -out=tfplan'
            }
        }

        stage('Terraform Apply') {
            when {
                expression { return !params.DESTROY }  // Apply only if DESTROY=false
            }
            steps {
                echo "ğŸš€ Applying Terraform plan..."
                sh 'terraform apply -input=false -auto-approve tfplan'
            }
        }

        stage('Terraform Destroy') {
            when {
                expression { return params.DESTROY }   // Destroy only if DESTROY=true
            }
            steps {
                echo "ğŸ—‘ Destroying Terraform infrastructure..."
                sh 'terraform destroy -auto-approve'
            }
        }
    }

    post {
        success {
            echo "ğŸ‰ Pipeline completed successfully!"
        }
        failure {
            echo "âŒ Pipeline failed!"
        }
    }
}
